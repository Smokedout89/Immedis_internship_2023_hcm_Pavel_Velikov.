@model CourseAddEmployeeModel

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form method="post" asp-controller="EmployeeCourses" asp-action="Add" class="border p-4 rounded">
                <h1 class="text-center">Select employee to add to <br /> @Model.Course.Name course.</h1>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mt-5">

                        <br />
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="text-center alert alert-success">@TempData["SuccessMessage"]</div>
                        }

                        <thead class="bg-primary">
                        <tr>
                            <th class="text-center">First Name</th>
                            <th class="text-center">Last Name</th>
                            <th class="text-center">Job Title</th>
                            <th class="text-center bg-secondary" style="width: 140px;">Add to course</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td class="text-center pt-3">@employee.FirstName</td>
                                <td class="text-center pt-3">@employee.LastName</td>
                                <td class="text-center pt-3">@employee.JobTitle</td>
                                <td>
                                    <div class="text-center">
                                        <input type="hidden" name="courseId" value="@Model.Course.Id" />
                                        <button type="submit" name="employeeId" value="@employee.Id" class="btn btn-success btn-lg" style="width: 120px;"><i class="bi bi-plus-square"></i>&nbsp; Add</button>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="EmployeeCourses" asp-action="Index" class="btn btn-secondary pt-2">
                            Back to Employee Courses
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>