@model EmployeeModel

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <form method="post" asp-controller="Employee" asp-action="DeleteEmp" class="border p-4 rounded">
                <input asp-for="Id" hidden />
                <h1 class="text-center">Delete Employee</h1>

                <div class="mb-3 text-center">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input asp-for="Age" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                    <input asp-for="JobTitle" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="HireDate" class="form-label">Hire Date</label>
                    <input asp-for="HireDate" disabled class="form-control text-center text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <input asp-for="Gender" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="ContractType" class="form-label">Contract Type</label>
                    <input asp-for="ContractType" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="Department" class="form-label">Department</label>
                    <input asp-for="Department" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="NetSalary" class="form-label">Net Salary</label>
                    <input asp-for="NetSalary" disabled class="form-control text-center" />
                </div>
                <div class="mb-3 text-center">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" disabled class="form-control text-center" />
                </div>
                <div class="mt-3">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary pt-2">
                            Back to Employees
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>