@model LoginModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form method="post" class="border p-4 rounded">
                <h1 class="text-center">Login</h1>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="text-center alert alert-success">@TempData["SuccessMessage"]</div>
                }

                <div class="mb-3">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
                </div>
                <div class="mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                </div>
                <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>